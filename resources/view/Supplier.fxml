<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gudang.controller.SupplierController">
   <children>
      <Label text="Manajemen Supplier" />
      <HBox prefHeight="30.0" prefWidth="50.0" spacing="10.0">
         <children>
            <TextField fx:id="txtKode" prefHeight="25.0" prefWidth="80.0" promptText="Kode" />
            <TextField fx:id="txtNama" prefHeight="25.0" prefWidth="80.0" promptText="Nama" />
            <TextField fx:id="txtAlamat" prefHeight="25.0" prefWidth="80.0" promptText="Alamat" />
            <TextField fx:id="txtTelepon" prefHeight="25.0" prefWidth="80.0" promptText="Telepon" />
            <Button mnemonicParsing="false" onAction="#tambahSupplier" text="Tambah" />
         </children>
      </HBox>
      <TableView fx:id="tblSupplier" prefHeight="216.0" prefWidth="450.0">
        <columns>
          <TableColumn fx:id="colKode" prefWidth="75.0" text="Kode" />
          <TableColumn fx:id="colNama" prefWidth="75.0" text="Nama" />
            <TableColumn fx:id="colAlamat" prefWidth="75.0" text="Alamat" />
            <TableColumn fx:id="colTelepon" prefWidth="75.0" text="Telepon" />
        </columns>
      </TableView>
      <HBox prefHeight="30.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#editSupplier" text="Edit" />
            <Button mnemonicParsing="false" onAction="#hapusSupplier" text="Hapus" />
         </children>
      </HBox>
   </children>
</VBox>
